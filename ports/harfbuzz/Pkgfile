version = "10.0.1"
desc = "An OpenType text shaping engine"
deps = ["freetype", "glib", "cairo", "icu", "zlib", "libpng", "graphite", "bzip2"]
makedeps = ["freetype", "glib", "cairo", "icu", "zlib", "libpng", "graphite", "bzip2", "gobject-introspection"]
source = [
  { url = "https://github.com/harfbuzz/harfbuzz/releases/download/$version/harfbuzz-$version.tar.xz" },
]

build = '''
	noname-meson harfbuzz-$version build -Dchafa=disabled -Ddocs=disabled
	meson configure --no-pager build
	meson compile -C build
	DESTDIR="$pkgdir" meson install -C build
'''
