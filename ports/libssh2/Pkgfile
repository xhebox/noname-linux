version="1.8.0"
desc="A library implementing the SSH2 protocol as defined by Internet Drafts"
makedeps=["libressl", "zlib"]
deps=["libressl", "zlib"]
source=[{url="https://www.libssh2.org/download/libssh2-$version.tar.gz"}]

build='''
	cd libssh2-$version
	./configure --prefix=
	make
	make DESTDIR="$pkgdir" install
'''
