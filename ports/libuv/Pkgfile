version="1.25.0"
deps=["musl"]
desc="Multi-platform support library with a focus on asynchronous I/O"
source=[{url="http://dist.libuv.org/dist/v${version}/libuv-v${version}.tar.gz"}]

build='''
	cd libuv-v$version

	NOCONFIGURE=1 ./autogen.sh 
	./configure --prefix=/

	make
	make DESTDIR=$pkgdir install
'''
