version="23.2.0-rc2"
makedeps=["expat", "libdrm", "elfutils", "llvm", "lm_sensors", "libva", "zstd", "spirv-llvm", "libglvnd", "vulkan", "wayland-protocols", "vulkan-headers"]
deps=["expat", "libdrm", "elfutils", "llvm", "lm_sensors", "libva", "zstd", "spirv-llvm", "libglvnd", "vulkan", "wayland"]
desc="Mesa 3D Graphics Library"
source=[
	{url="https://archive.mesa3d.org/mesa-$version.tar.xz"},
	{url="no-isystem.patch"},
	{url="musl.patch"},
	{url="musl-stacksize.patch"},
	{url="musl-endian.patch"},
]

ext='''
	cd mesa-$version
	for i in $source; do
		echo $i
		case $i in
		add-*patch|musl*patch) patch -p0 -i "$srcdir"/$i ;;
		*patch)	patch -Nbp1 -i "$srcdir"/$i ;;
		esac
	done
'''

build='''
	python3 -m venv ss
	. ./ss/bin/activate
	pip install mako
	noname-meson mesa-$version build \
		-D b_ndebug=true \
		-D platforms=wayland \
		-D gallium-drivers=r300,r600,radeonsi,nouveau,virgl,svga,swrast,i915,zink \
		-D vulkan-drivers=amd,intel,intel_hasvk,swrast,virtio \
		-D vulkan-layers=device-select,intel-nullhw,overlay \
		-D dri3=enabled \
		-D egl=enabled \
		-D cpp_rtti=false \
		-D gallium-extra-hud=true \
		-D gallium-nine=false \
		-D gallium-vdpau=disabled \
		-D gallium-omx=disabled \
		-D gallium-va=enabled \
		-D gallium-xa=disabled \
		-D microsoft-clc=disabled \
		-D android-libbacktrace=disabled \
		-D gbm=enabled \
		-D gles1=disabled \
		-D gles2=enabled \
		-D glx=disabled \
		-D glvnd=true \
		-D llvm=enabled \
		-D libunwind=disabled \
		-D lmsensors=enabled \
		-D shared-glapi=enabled \
		-D valgrind=disabled \
		-D zstd=enabled \
		-D xlib-lease=disabled \
		-D video-codecs=vc1dec,h264dec,h264enc,h265dec,h265enc

	meson configure --no-pager build
	meson compile -C build
	DESTDIR="$pkgdir" meson install -C build
'''
