version="1.6.0"
desc='High productivity build system'
makedeps=["python3", "ninja"]
deps=["python3", "python3-tomli", "ninja"]
source=[{url="https://github.com/mesonbuild/meson/releases/download/${version}/meson-${version}.tar.gz"}]

build='''
	cd meson-$version
	python3 setup.py build
	python3 setup.py install \
		--prefix= \
		--root="$pkgdir"
	cat >> "$pkgdir"/bin/noname-meson << "EOF"
#!/bin/sh
meson setup \
	--prefix				/ \
	--libdir				lib \
	--libexecdir		lib \
	--bindir				bin \
	--sbindir				bin \
	--includedir		include \
	--datadir				share \
	--mandir				share/man \
	--infodir				share/info \
	--localedir			share/locale \
	--sysconfdir		etc \
	--localstatedir	var \
	--sharedstatedir var/lib \
	--buildtype			plain \
	--auto-features enabled \
	--wrap-mode     nodownload \
	-D b_lto=true \
	-D b_pie=true \
	"$@"
EOF
	chmod +x "$pkgdir"/bin/noname-meson
'''
