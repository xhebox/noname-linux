version="19.0.3"
makedeps=["python3-setuptools"]
eps=["python3"]
source=[{url="https://pypi.io/packages/source/p/pip/pip-${version}.tar.gz"}]
desc="The PyPA recommended tool for installing Python packages"

build='''
	cd pip-$version
	/bin/python3 setup.py install \
		--prefix= \
		--root=$pkgdir \
		--optimize=1
	rm "$pkgdir"/bin/pip
'''
